<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="384dp"
        android:layout_height="95dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/baloo"
        android:text="İnternetten market alışverişi yapıyor musunuz ? "
        android:textAlignment="center"
        android:textColor="#3A0236"
        android:textSize="29dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.104" />

    <RadioGroup
        android:id="@+id/evet_hayir_radio_group"
        android:layout_width="400dp"
        android:layout_height="73dp"
        android:gravity="center_horizontal"
        android:layout_marginStart="32dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtQuestion"
        app:layout_constraintVertical_bias="0.104">


        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="180dp"
            android:layout_height="53dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/radio_flat_selector"
            android:button="@android:color/transparent"
            android:checked="true"
            android:fontFamily="@font/exo_2_bold"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingTop="3dp"
            android:paddingRight="16dp"
            android:paddingBottom="3dp"
            android:text="Evet"
            android:textColor="@drawable/radio_flat_text_selector"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="180dp"
            android:layout_height="53dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/radio_flat_selector"
            android:button="@android:color/transparent"
            android:fontFamily="@font/exo_2_bold"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingTop="3dp"
            android:paddingRight="16dp"
            android:paddingBottom="3dp"
            android:text="Hayır"
            android:textColor="@drawable/radio_flat_text_selector"
            android:textSize="25dp" />

    </RadioGroup>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="394dp"
        android:layout_height="155dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001"
        app:srcCompat="@drawable/surveyapp_logo_black_header_alt" />

    <Button
        android:id="@+id/btnNext1"
        android:layout_width="393dp"
        android:layout_height="61dp"
        android:text="SONRAKİ SORU"
        android:textSize="24dp"
        android:textColor="#FFF"
        android:background="@drawable/custom_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/evet_hayir_radio_group"
        app:layout_constraintVertical_bias="0.253" />
</androidx.constraintlayout.widget.ConstraintLayout>
